@model IEnumerable<Textbook>
@{
    ViewData["Title"] = "SearchView";
}

<h1>SearchView</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th style="width:25%">
                Textbook Name
            </th>
            <th style="width:25%">
                Textbook Price
            </th>
            <th style="width:25%">
                Course
            </th>
            <th style="width:25%">
                Faculty
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
        <tr>
            <td>@t.Name</td>
            <td>@t.Price.ToString("c")</td>
            <td>@t.Course.CourseId</td>
            <td>@t.Course.CourseProf</td>
            <td>
                @if (Context.User.Identity.IsAuthenticated || Context.User.IsInRole(5.ToString()))
                {
                    <a asp-action="AddToCart" asp-controller="Shop" asp-route-id=@t.TextbookId class="btn btn-primary">Add to cart</a>
                }
            </td>
        </tr>
        }

    </tbody>
</table>    